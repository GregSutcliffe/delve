<% provide(:title, 'Pages') %>
<h1>Listing Pages</h1>

<table>
  <tr>
    <th>Path</th>
    <th>Document</th>
  </tr>

  <% @pages.each do |page| %>
    <tr>
      <td><%= page.path %></td>
      <td><%= link_to page.document.name, document_path(page.document) if page.document %></td>
      <td><%= link_to 'Show', page_path(page) %></td>
      <td><%= link_to 'Edit', edit_page_path(page) %></td>
      <td><%= link_to 'Destroy', page_path(page),
              method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<br />
