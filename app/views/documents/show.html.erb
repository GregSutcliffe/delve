<% provide(:title, @document.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= @document.name %>
      </h1>
      <h2>
        Location: <%= @document.location %>
    </h2>
    </section>
  </aside>
</div>
<div class="span8">
  <% if @document.pages.any? %>
    <h3>Pages (<%= @document.pages.count %>)</h3>
    <ol class="pages">
      <%= render @pages %>
    </ol>
    <%= will_paginate @pages %>
  <% end %>
</div>
