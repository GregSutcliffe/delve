<% provide(:title, 'Documents') %>

<div id="title" class="row">
  <div class="span8">
    <h1>All Documents</h1>
    <%= link_to "New Document", new_document_path, class: "btn btn-success" %>
  </div>
  <div id="tag_cloud" class="span4">
    <%= render :partial => 'shared/tag_cloud' %>
  </div>
</div>

<div class="row">
  <div id="doc_info" class="span2 offset10 btn-toolbar ra">
    <div class="btn-group right">
</div>
</div>

<%= will_paginate %>

<table class="table table-bordered table-striped table-condensed">
  <tr>
    <th><%= sort :name, :as => 'Name' %>
    <th><%= sort :location, :as => 'Location' %></th>
    <th><%= sort :relevent_date, :as => 'Date' %></th>
    <th>Actions</th>
  </tr>

  <% @documents.each do |doc| %>
    <tr>
      <td><%= link_to doc.name, document_path(doc) %></td>
      <td><%= doc.location %></td>
      <td><%= doc.relevant_date.to_date rescue "" %></td>
      <td><%= link_to 'Edit', edit_document_path(doc), class: "btn btn-small" %>
          <%= link_to 'Delete', document_path(doc), class: "btn btn-small btn-danger",
              method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate %>
