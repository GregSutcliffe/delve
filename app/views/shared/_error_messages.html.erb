<% if @document.errors.any? %>
    <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@document.errors.count, "error") %>.
    </div>
    <ul>
    <% @document.errors.full_messages.each do |msg| %>
        <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
